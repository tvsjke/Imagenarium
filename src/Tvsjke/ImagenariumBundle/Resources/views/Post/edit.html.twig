{% extends 'ImagenariumBundle::layout.html.twig' %}

{% block title %}Edit{% endblock%}

{% block body %}
    <header>
      <h1>Edit post</h1>
    </header>

    {{ form_start(form, { 'action': path('edit', {'id': form.vars.value.id}), 'method': 'POST', 'attr': {'class': 'blogger'} }) }}
    {{ form_errors(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.category) }}
    {{ form_row(form.image) }}
    {{ form_row(form.description) }}

    {{ form_rest(form) }}

    <input type="submit" value="Save" />


{% endblock %}